<div class="container px-4 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% if user_signed_in? %>
      <div>
       <%= link_to new_post_sake_path, class: "btn btn-info btn-sm btn-block  mt-1" do %>
        <i class="fas fa-pen"></i>日本酒を評価する
       <% end %>
      </div>
　　　<% end %>
　　　 <div>
       <%= link_to 'ゲストログイン', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block  mt-1 sign_in", method: :post %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="m-4">
        <h4>ようこそ、SAKE-Niigataへ!</h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <h2 class="my-4"><strong>レビュー</strong></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
      <div class="row">
        <% @post_sakes.each do |post_sake| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= image_tag post_sake.image, class: "card-img-top", alt: "Sake Image" %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to post_sake.sake, post_sake_path(post_sake.id) %></h5>
            <%= render 'public/post_sakes/static_rate', post_sake: post_sake %>
            <p class="card-text"><%= post_sake.comment %></p>
            <a href="<%= post_sake_path(post_sake.id) %>" class="btn btn-primary"><%= "#{post_sake.post_comments.count} コメント" %></a>
          </div>
        </div>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>