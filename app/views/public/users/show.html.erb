<div class="container">
 <div class="row">
  <div class="col-md-3">
    <% if user_signed_in? %>
      <div>
       <%= link_to new_post_sake_path, class: "btn btn-info btn-sm btn-block  mt-1" do %>
        <i class="fas fa-pen"></i>日本酒を評価する
       <% end %>
      </div>
　　　<% end %>
  </div>
  <div class="col-md-9">
    <h3><%= @user.name %></h3>
    <%= image_tag @user.get_profile_image(100,100), class: "img-fluid rounded-circle" %>
    <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-primary" %></p>
    <% end %>
  </div>
 </div>
 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
    <h3>レビュー投稿一覧</h3>
    <div class="row">
     <%= render 'public/post_sakes/index', post_sakes: @post_sakes %>
   </div>
  </div>
 </div>
</div>
