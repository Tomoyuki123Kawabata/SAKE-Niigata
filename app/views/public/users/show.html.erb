<div class="container">
 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
    <h3><%= @user.name %></h3>
    <%= image_tag @user.get_profile_image(100,100), class: "img-fluid rounded-circle" %>
    <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-primary" %></p>
    <% end %>
  </div>
 </div>
 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-9">
    <h3>レビュー投稿一覧</h3>
    <div class="row">
    <% @post_sakes.each do |post_sake| %>
      <div class="card col-md-4 mb-3" >
        <div class="card-body">
          <%= link_to post_sake_path(post_sake.id) do %>
            <%= image_tag post_sake.image, class: "card-img-top img-fluid"  %>
          <% end %>
          <div class="card-text">
            <p>投稿ユーザー画像：<%= image_tag post_sake.user.get_profile_image(50,50), class: "rounded-circle mr-2" %><%= post_sake.user.name %></p>
            <p>日本酒名：<%= post_sake.sake %></p>
             <%= render 'public/post_sakes/static_rate', post_sake: post_sake %>
            <p>レビュー：<%= post_sake.comment %></p>
          </div>
        </div>
      </div>
    <% end %>
   </div>
  </div>
 </div>
  
  <div class ="row">
    <div class="col-md-3"></div>
    <div class ="col-md-9">
      <%= link_to "レビューを投稿する>>", new_post_sake_path %>
    </div>
  </div>
</div>
