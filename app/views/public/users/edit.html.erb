<h2 class="mb-3">プロフィール編集</h2>
<%= form_with model: @user, local: true do |f| %>

  <div class="mb-3">
    <%= f.label :名前, class: "form-label" %>
    <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control", placeholder: "名前"%>
  </div>
  <div class="mb-3">
    <%= f.label :プロフィール画像, class: "form-label" %>
    <%= f.file_field :profile_image, class: "form-control", accept: "image/*" %>
  </div>
 <%= f.submit "変更を保存", class: "btn btn-primary" %>
 
 <div class="col-md-2 form-group">
   <%= link_to "退会する", unsubscribe_path, class: 'btn btn-block btn-danger' %>
 </div>
<% end %>