<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <h2 class="col-md-6 mb-3">プロフィール編集</h2>
    <%= form_with model: @user, local: true do |f| %>
    <div class="col-md-3"></div>
  </div>
  <div class="row">
   <div class="col-md-3"></div>
   <div class="col-md-9 mb-3">
   <%= f.label :名前, class: "form-label" %>
   <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control", placeholder: "名前"%>
   </div>
  </div>
  <div class="row">
   <div class="col-md-3"></div>
   <div class="col-md-9 mb-3">
   <%= f.label :プロフィール画像, class: "form-label" %>
   <%= f.file_field :profile_image, class: "form-control", accept: "image/*" %>
   </div>
  </div>
  <div class="row">
   <div class="col-md-3"></div>
   <div class="col-md-4 mb-3">
    <%= f.submit "変更を保存", class: "btn btn-primary" %>
   </div>
   <div class="col-md-5 mb-3 form-group">
     <%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger' %>
   </div>
   </div>
  </div>
   <% end %>
